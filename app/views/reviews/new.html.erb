<div class="container pt-5">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h1>Reviewing <%= @restaurant.name %></h1>

      <%# We want simple form to generate this %>
      <%# /restaurants/41/reviews %>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%# Wrapper label and input %>
        <%= f.input :content, label: "Tell us about your experience:" %>
        <%= f.input :rating  %>
        <%= f.button :submit, class: "btn-primary " %>
      <% end %>
    </div>
  </div>

</div>
